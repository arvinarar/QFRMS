@using QFRMS.Data.ViewModels
@model UsersViewModel
@{
    ViewData["Title"] = "Manage Account";
}
<div class="page-header small mx-auto">
    <div class="header">
        <img src="~/icons/settings.svg" class="header-icon" />
        <h2 class="header-title">ACCOUNT</h2>
    </div>
    <div class="header-hr"></div>
</div>
<div class="page-body small mx-auto">
    <div class="row body-header title">
        <div class="col d-flex justify-content-start align-items-center">
            <h4 class="body-title">User Detail</h4>
        </div>
        <div class="col d-flex justify-content-end align-items-center">
            <a class="nav-link btn btn-primary no-glow" asp-area="" asp-controller="Account" asp-action="EditDetails">
                <img src="~/icons/edit.svg" class="icons" />
                Edit
            </a>
        </div>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <td class="col-6 user-detail">
                    <h6>Full Name :</h6> @Model.FullName
                </td>
                <td class="col-6 user-detail">
                    <h6>Role :</h6> @Model.Role
                </td>
            </tr>
            <tr>
                <td class="col-6 user-detail">
                    <h6>Username :</h6> @Model.UserName
                </td>
                <td class="col-6 user-detail">
                    <h6>Password :</h6> ********
                </td>
            </tr>
        </tbody>
    </table>
</div>