@using QFRMS.Services.Utils
@using QFRMS.Data.ViewModels

@model UsersViewModel

<!-- Modal -->
<div class="modal fade" id="deleteUser-@Model.Id" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content page-body bg-white">
            <form asp-action="DeleteAccount" method="post">
                <input asp-for="Id" type="hidden"/>
                <input asp-for="UserName" type="hidden" />
                <div class="modal-header body-header p-2">
                    <h4 class="body-title" id="deleteModalLabel">Delete User</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body body-header">
                    <h5>Are you sure you want to delete this User?</h5>
                    <div class="row rows-cols-1">
                        <div class="col-12 mb-1">
                            <span class="fw-bold">Fullname: </span> @Model.FullName
                        </div>
                        <div class="col-12 mb-1">
                            <span class="fw-bold">Username: </span> @Model.UserName
                        </div>
                        <div class="col-12 mb-1">
                            <span class="fw-bold">Role: </span> @Model.Role
                        </div>
                    </div>
                </div>
                <div class="modal-footer form-footer m-0 p-0 pt-2">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Back</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>