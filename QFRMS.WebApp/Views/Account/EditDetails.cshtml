@using QFRMS.Data.DTOs
@model UpdateUserDetails
@{
    ViewData["Title"] = "Manage Account";
}
<div class="page-header small mx-auto">
    <div class="header">
        <img src="~/icons/settings.svg" class="header-icon" />
        <h2 class="header-title">ACCOUNT</h2>
    </div>
    <div class="header-hr"></div>
</div>
<div class="page-body small mx-auto">
    <div class="row body-header title">
        <div class="col d-flex justify-content-start align-items-center">
            <h4 class="body-title">Edit User Details</h4>
        </div>
        <div class="col d-flex justify-content-end align-items-center">
            <button class="btn btn-back no-glow">
                <a class="nav-link d-flex" asp-area="" asp-controller="Account" asp-action="Details">
                    <img src="~/icons/back.svg" class="icons" />
                    Back
                </a>
            </button>
        </div>
    </div>
    <div class="page-body-main">
        <p class="required-message mb-4">Contact Admin to make changes to your name and role.</p>
        <div class="row">
            <div class="col-6 user-detail">
                <h6>FullName :</h6> @Model.FullName
            </div>
            <div class="col-6 user-detail">
                <h6>Role :</h6> @Model.Role
            </div>
        </div>
        <form asp-action="EditAccountDetails" method="post">
            <div asp-validation-summary="ModelOnly" class="row text-danger" role="alert"></div>
            <input asp-for="Id" type="hidden" />
            <input asp-for="FullName" type="hidden" />
            <input asp-for="Role" type="hidden" />
            <div class="row row-cols-2 user-detail-fields">
                <div class="col-12 d-flex justify-content-center">
                    <p class="form-header w-50 text-center">Change Username</p>
                </div>
                <div class="col-4 label-right">
                    <label asp-for="Username" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="col-12 d-flex justify-content-center">
                    <p class="form-header w-50 text-center">Change Password</p>
                </div>
                <div class="col-4 label-right">
                    <label asp-for="OldPassword" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="OldPassword" class="form-control" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="col-4 label-right">
                    <label asp-for="NewPassword" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="col-4 label-right">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="row form-footer">
                <div class="col d-flex justify-content-center">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}